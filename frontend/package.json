{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "rm -rf ../public/{js,css,img} && vue-cli-service build --no-clean",
    "dev": "concurrently \"npm run serve\" \"npm run test\"",
    "test": "node tests.config.js",
    "lint": "vue-cli-service lint . --ext .js,.vue --fix"
  },
  "dependencies": {
    "@sentry/browser": "^5.17.0",
    "@sentry/integrations": "^5.17.0",
    "axios": "^0.19.2",
    "core-js": "^3.6.4",
    "query-string": "^6.13.0",
    "uuid": "^7.0.3",
    "vue": "^2.6.11",
    "vue-codemirror": "^4.0.6",
    "vue-fragment": "^1.5.1",
    "vue-json-pretty": "^1.6.3",
    "vue-prism-editor": "^0.6.1",
    "vue-router": "^3.1.6",
    "vuedraggable": "^2.23.2",
    "vuetify": "^2.2.11",
    "vuex": "^3.1.3"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.2.0",
    "@vue/cli-plugin-eslint": "~4.2.0",
    "@vue/cli-plugin-router": "^4.2.3",
    "@vue/cli-service": "~4.2.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^25.2.3",
    "babel-preset-env": "^1.7.0",
    "concurrently": "^5.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.7.2",
    "eslint-config-standard": "^14.1.0",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^6.1.2",
    "jest": "^25.2.3",
    "sass": "^1.19.0",
    "sass-loader": "^8.0.0",
    "vue-test-utils-champi": "^1.0.0-beta.29",
    "vue-cli-plugin-vuetify": "^2.0.5",
    "vue-jest": "^3.0.5",
    "vue-template-compiler": "^2.6.11",
    "vuetify-loader": "^1.3.0"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx}"
    ],
    "testEnvironment": "jsdom",
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|vue)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "transform": {
      ".*\\.(vue)$": "vue-jest",
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
